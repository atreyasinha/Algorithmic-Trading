@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}


<br />
<br />


<div class="container text-center">
    <div class="card" style="background-color:#161B22">
        <div class="card-body">
            <h2 class="text-white" style="font-family: 'Monofett', cursive;">
                O(trade)
            </h2>
            <br />
            <div class="container">
                <h1>Welcome to O(trade)</h1>

                <p class="text-white">
                    Log in to your account.
                </p>

                <br />
                <br />
                <br />

                <form id="account" method="post">
                    <div class="form-row" style="justify-content:center;">
                        <div class="form-group col-md-6">
                            <label class="text-white" asp-for="Input.Email"></label>
                            <input asp-for="Input.Email" class="form-control" />
                            <span asp-validation-for="Input.Email" class="text-danger"></span>
                        </div>

                    </div>

                    <div class="form-row" style="justify-content:center;">

                        <div class="form-group col-md-6">
                            <label class="text-white" asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>
                    </div>



                    @*<div class="form-group">
                            <div class="checkbox">
                                <label class="text-white" asp-for="Input.RememberMe">
                                    <input asp-for="Input.RememberMe" />
                                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                                </label>
                            </div>
                        </div>*@
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <br />
                    <div class="form-group">
                        <button type="submit" style="background-color: #6930c3" class="btn btn-lg btn-primary">Log in</button>

                    </div>
                    <div class="form-group">
                        @*<p>
                                <a id="forgot-password" asp-page="./ForgotPassword">Forgot your password?</a>
                            </p>*@
                        <p>
                            <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Register as a new user</a>
                        </p>
                        @*<p>
                                <a id="resend-confirmation" asp-page="./ResendEmailConfirmation">Resend email confirmation</a>
                            </p>*@
                    </div>
                </form>

            </div>

        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
