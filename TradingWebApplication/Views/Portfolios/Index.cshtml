                @Html.DisplayFor(modelItem => item.Portfolio_Value)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Profit_Loss)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Trade_Type)
            </td>
